pipeline {
    agent any

    tools {
        maven 'Maven_3.6.0'
        jdk 'OpenJDK_11'
    }

    stages {
        stage {
            steps {
                script {
                    def maven_operation = "mvn clean install"
                    if (isUnix()) {
                        sh maven_operation
                    }
                    else {
                        bat maven_operation
                    }
                }
            }
        }
    }
}


